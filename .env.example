# Configurações de Ambiente para o Sistema RAG
# Copie este arquivo para .env e configure os valores

# === CONFIGURAÇÕES DO SERVIDOR ===
PORT=8000
HOST=0.0.0.0
WORKERS=1
ENVIRONMENT=production

# === CONFIGURAÇÕES DE LOG ===
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/rag_api.log

# === CONFIGURAÇÕES DE AI ===
# OBRIGATÓRIO: Chave da API OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Configurações opcionais de AI
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=4000
TEMPERATURE=0.7

# === CONFIGURAÇÕES DE BUSCA ===
MAX_SEARCH_RESULTS=50
SEARCH_TIMEOUT=30
RERANK_ENABLED=true
RERANK_TOP_K=10

# === CONFIGURAÇÕES DE CACHE ===
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# === CONFIGURAÇÕES DE DADOS ===
DATA_PATH=./data
INDEX_PATH=./data/index
LOGS_PATH=./logs

# === CONFIGURAÇÕES DE SEGURANÇA ===
CORS_ORIGINS=*
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# === CONFIGURAÇÕES DE MONITORAMENTO ===
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true

# === CONFIGURAÇÕES DE ATUALIZAÇÃO ===
AUTO_UPDATE_ENABLED=true
UPDATE_SCHEDULE_WEEKLY=true
UPDATE_SCHEDULE_MONTHLY=true
EMERGENCY_UPDATE_ENABLED=true

# === CONFIGURAÇÕES DE BACKUP ===
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# === CONFIGURAÇÕES ESPECÍFICAS DO RENDER ===
# Estas são configuradas automaticamente pelo Render
# RENDER=true
# RENDER_SERVICE_NAME=vina-rag-api
# RENDER_GIT_COMMIT=auto